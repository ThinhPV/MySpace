@model Identity.STS.ViewModels.Account.SetPasswordViewModel

@{
    ViewData["Title"] = "SetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h4>SubTitle</h4>
@await Html.PartialAsync("_StatusMessage", Model.StatusMessage)

<div class="alert alert-info" role="alert">
    Info
</div>
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewPassword">NewPassword</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword">ConfirmPassword</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">SetPassword</button>
        </form>
    </div>
</div>
