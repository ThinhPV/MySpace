@{
    ViewData["Title"] = "LoginWithRecoveryCode";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Identity.STS.ViewModels.Account.LoginWithRecoveryCodeViewModel

@await Html.PartialAsync("_ValidationSummary")

<h1>@ViewData["Title"]</h1>
<hr />
<p>
    Info
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input asp-for="ReturnUrl" type="hidden" />
            <div class="form-group">
                <label asp-for="RecoveryCode">Code</label>
                <input asp-for="RecoveryCode" class="form-control" autocomplete="off" autofocus />
                <span asp-validation-for="RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">LogIn</button>
        </form>
    </div>
</div>
